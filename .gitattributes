# Ensure consistent line endings
* text=auto

# PHP files
*.php text diff=php

# Markdown and documentation
*.md text
*.txt text

# Shell scripts
*.sh text eol=lf

# Composer lock file
composer.lock text eol=lf

# Prevent linguist from counting vendor/ as source
/vendor/ linguist-vendored

# Exclude test artifacts from linguist stats
/tests/ linguist-vendored

# Normalize JSON, YAML, and config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf

# Images and binaries
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.tgz binary
*.mp3 binary
*.mp4 binary
*.mov binary
*.ogg binary
*.webm binary
